// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PSQL_DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  username    String @unique
  password String
  //   posts   Post[]
  //   profile Profile?
}

model Question {
  id Int      @id @default(autoincrement())
  title String
  description String
  categories Category[]
  complexity Complexity
}

model Category {
  id Int @id @default(autoincrement())
  name String
  questions Question[]
}

enum Complexity {
  Easy
  Medium
  Hard
}